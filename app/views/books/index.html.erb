<div class="max-w-4xl mx-auto px-4 py-6 font-serif" data-controller="modal">
  
  <header class="text-center mb-12">
    <h1 class="text-5xl font-serif font-medium text-stone-900 mb-4 tracking-tight">Discover your next read</h1>
  </header>

  <div class="max-w-2xl mx-auto mb-12">
    <%= form_with url: books_path, method: :get, 
                  data: { controller: "search", turbo_frame: "books_list" } do |f| %>
      <div class="relative flex items-center">
        <%= f.text_field :query, placeholder: "Search...", data: { action: "input->search#submit" },
            class: "w-full pl-12 pr-4 py-4 bg-white border border-stone-200 rounded-2xl shadow-sm outline-none" %>
      </div>
    <% end %>
  </div>

  <%= turbo_frame_tag "books_list" do %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6" id="books-collection">
      <% @books.each do |book| %>
        <article class="group bg-white p-6 rounded-2xl border border-stone-200 hover:shadow-lg transition-all" 
                 data-modal-target="card" 
                 data-book-id="<%= book.id %>">
          <div>
            <h2 class="text-xl font-bold text-stone-900"><%= book.title %></h2>
            <p class="text-stone-500 italic">by <%= book.author.name %></p>
          </div>
          
          <div class="mt-4 pt-4 border-t border-stone-50 flex justify-end">
            <button type="button" 
                    data-action="click->modal#open" 
                    data-book-id="<%= book.id %>"
                    class="text-indigo-600 font-semibold text-sm hover:underline cursor-pointer">
              View Details â†’
            </button>
          </div>
        </article>
      <% end %>
    </div>
  <% end %>

<div data-modal-target="overlay" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-stone-900/80 backdrop-blur-md p-4">

  <button data-action="click->modal#previous" class="absolute left-4 md:left-10 top-1/2 -translate-y-1/2 z-50 bg-white/10 hover:bg-white text-white hover:text-stone-900 p-4 rounded-full transition-all duration-300 border border-white/20 active:scale-90 cursor-pointer group">
     <
  </button>

  <div class="relative bg-white w-full max-w-lg rounded-3xl shadow-2xl overflow-hidden animate-in fade-in zoom-in duration-200">
    <div class="p-8 min-h-[250px]">
      <button data-action="click->modal#close" class="absolute top-5 right-5 text-stone-300 hover:text-stone-900 text-3xl font-light cursor-pointer transition-colors leading-none">&times;</button>
      
      <%= turbo_frame_tag "modal_book_content" do %>
        <div class="flex flex-col items-center justify-center py-16 gap-3">
          <p class="text-[10px] font-bold text-stone-400 uppercase tracking-widest">Opening Library...</p>
        </div>
      <% end %>
    </div>
  </div>

  <button data-action="click->modal#next" class="absolute right-4 md:right-10 top-1/2 -translate-y-1/2 z-50 bg-white/10 hover:bg-white text-white hover:text-stone-900 p-4 rounded-full transition-all duration-300 border border-white/20 active:scale-90 cursor-pointer group">
     >
  </button>

</div>
</div>