<div class="max-w-3xl mx-auto px-4 py-12">
  <!-- Breadcrumb / Back Link -->
  <div class="mb-8">
    <%= link_to user_path(current_user), class: "text-stone-400 hover:text-stone-600 text-sm font-medium inline-flex items-center gap-2 transition" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Profile
    <% end %>
  </div>

  <div class="bg-white border border-stone-200 rounded-3xl shadow-sm overflow-hidden">
    <!-- Receipt Header -->
    <div class="p-8 border-b border-stone-100 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
      <div>
        <h1 class="text-3xl font-serif font-medium text-stone-900 mb-1 text-balance">Order Details</h1>
        <p class="text-stone-500">Placed on <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
      
      <div class="flex flex-col items-start md:items-end gap-2">
        <span class="text-xs font-bold text-stone-400 uppercase tracking-widest">Order Number</span>
        <span class="text-lg font-mono font-semibold text-stone-900">#ORD-<%= @order.id.to_s.rjust(5, '0') %></span>
        
        <%# Status Badge - Enum values based on your model %>
        <% status_classes = case @order.status 
           when 'completed' then 'bg-emerald-50 text-emerald-700 border-emerald-100'
           when 'pending' then 'bg-amber-50 text-amber-700 border-amber-100'
           else 'bg-stone-100 text-stone-600 border-stone-200'
           end %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold border uppercase tracking-wider <%= status_classes %>">
          <%= @order.status %>
        </span>
      </div>
    </div>

    <!-- Items List -->
    <div class="px-8 py-6">
      <h2 class="text-sm font-bold text-stone-400 uppercase tracking-widest mb-6">Purchased Items</h2>
      <div class="space-y-6">
        <% @order.order_items.each do |item| %>
          <div class="flex justify-between items-center">
            <div class="flex items-center gap-4">
              <!-- Book Icon Placeholder -->
              <div class="h-12 w-10 bg-stone-100 rounded border border-stone-200 flex items-center justify-center text-stone-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5s3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <div>
                <p class="font-semibold text-stone-900 leading-tight"><%= item.book.title %></p>
                <p class="text-sm text-stone-500">
                  <%= item.quantity %> x $<%= number_with_precision(item.price, precision: 2) %>
                </p>
              </div>
            </div>
            <!-- Subtotal for this specific item -->
            <p class="font-medium text-stone-900">
              $<%= number_with_precision(item.price * item.quantity, precision: 2) %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Summary Section -->
    <div class="bg-stone-50/50 p-8 border-t border-stone-100">
      <div class="max-w-xs ml-auto space-y-3">
        <div class="flex justify-between text-sm text-stone-500">
          <span>Subtotal</span>
          <span>$<%= number_with_precision(@order.total_price, precision: 2) %></span>
        </div>
        <div class="flex justify-between text-sm text-stone-500">
          <span>Shipping (Digital Delivery)</span>
          <span class="text-emerald-600 font-medium">Free</span>
        </div>
        <div class="flex justify-between items-center pt-3 border-t border-stone-200">
          <span class="text-lg font-bold text-stone-900">Total</span>
          <span class="text-2xl font-bold text-indigo-600">
            $<%= number_with_precision(@order.total_price, precision: 2) %>
          </span>
        </div>
      </div>
    </div>

    <!-- Footer Action -->
    <div class="px-8 py-6 flex flex-col sm:flex-row justify-between items-center border-t border-stone-100 gap-4">
      <p class="text-xs text-stone-400 text-center sm:text-left leading-relaxed">
        Order confirmation and download links were <br class="hidden sm:block"> 
        sent to <span class="text-stone-600 font-medium"><%= @order.user.email %></span>
      </p>
      
      <button onclick="window.print()" class="w-full sm:w-auto px-6 py-2 border border-stone-200 rounded-xl text-stone-600 hover:text-stone-900 hover:bg-stone-50 text-sm font-bold flex items-center justify-center gap-2 transition shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
        </svg>
        Print Receipt
      </button>
    </div>
  </div>
</div>