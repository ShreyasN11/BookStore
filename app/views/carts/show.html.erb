<div class="max-w-4xl mx-auto px-4 py-12">
  <h1 class="text-4xl font-serif font-medium text-stone-900 mb-8">Your Cart</h1>

  <% if @cart_items.any? %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <div class="lg:col-span-2 space-y-6">
        <% @cart_items.each do |item| %>
          <div class="flex gap-6 p-6 bg-white border border-stone-200 rounded-3xl shadow-sm">
            <div class="h-24 w-16 bg-stone-100 rounded-lg flex-shrink-0 border border-stone-100 flex items-center justify-center text-stone-400">
            </div>
            
            <div class="flex-1">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="font-bold text-stone-900 text-lg"><%= item.book.title %></h3>
                  <p class="text-stone-500 text-sm">by <%= item.book.author %></p>
                </div>
                <p class="font-bold text-stone-900">Rs. <%= number_with_precision(item.subtotal, precision: 2) %></p>
              </div>

              <div class="mt-4 flex items-center justify-between">
                <div class="flex items-center border border-stone-200 rounded-xl overflow-hidden">
                  <span class="px-4 py-1 text-sm font-medium text-stone-600 bg-stone-50">Qty: <%= item.quantity %></span>
                </div>
                
                <%= button_to cart_item_path(item), method: :delete, class: "text-red-400 hover:text-red-600 text-xs font-bold uppercase tracking-widest transition" do %>
                  Remove
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="lg:col-span-1">
        <div class="bg-stone-900 rounded-3xl p-8 text-white sticky top-24 shadow-xl shadow-stone-900/20">
          <h2 class="text-xl font-serif mb-6">Summary</h2>
          
          <div class="space-y-4 border-b border-white/10 pb-6 mb-6">
            <div class="flex justify-between text-stone-400 text-sm">
              <span>Subtotal</span>
              <span class="text-white">Rs. <%= number_with_precision(@cart.total_price, precision: 2) %></span>
            </div>
            <div class="flex justify-between text-stone-400 text-sm">
              <span>Shipping</span>
              <span class="text-emerald-400 font-medium">Free</span>
            </div>
          </div>

          <div class="flex justify-between items-center mb-8">
            <span class="text-lg font-medium">Total</span>
            <span class="text-lg font-bold font-serif">Rs. <%= number_with_precision(@cart.total_price, precision: 2) %></span>
          </div>

          <%= button_to orders_path, 
            method: :post,
            data: { turbo_confirm: "Are you sure you want to place this order?" },
            class: "block w-full text-center bg-white text-stone-900 py-4 rounded-2xl font-bold hover:bg-stone-100 transition shadow-lg active:scale-95 cursor-pointer" do %>
            Checkout
          <% end %>
          
        </div>
      </div>

    </div>
  <% else %>
    <div class="text-center py-24 bg-white border border-stone-200 rounded-3xl">
      <p class="text-stone-400 mb-6 italic">Your bag is currently empty.</p>
      <%= link_to "Discover Books", books_path, class: "text-indigo-600 font-bold hover:underline" %>
    </div>
  <% end %>
</div>