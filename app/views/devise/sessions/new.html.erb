<div class="min-h-[calc(100vh-64px)] flex flex-col justify-center py-2 sm:px-6 lg:px-4">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <!-- Icon/Logo Placeholder -->
    
    <h2 class="mt- text-center text-3xl font-serif font-medium text-stone-900">
      Welcome back
    </h2>
    <p class="mt-2 text-center text-sm text-stone-500">
      Log in to access your library
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 border border-stone-200 shadow-xl shadow-stone-200/50 sm:rounded-3xl sm:px-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        
        <!-- Email + Username Field -->
        <div>
        <%= f.label :login, "Username or Email",
            class: "block text-sm font-medium text-stone-700 mb-1" %>
      
        <%= f.text_field :login,
            autofocus: true,
            autocomplete: "username",
            placeholder: "username or email",
            class: "block w-full px-4 py-3 rounded-xl border-stone-200 text-stone-900 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all placeholder:text-stone-400" %>
      </div>
      

        <!-- Password Field -->
        <div>
          <div class="flex items-center justify-between mb-1">
            <%= f.label :password, class: "block text-sm font-medium text-stone-700" %>
          </div>
          <%= f.password_field :password, 
              autocomplete: "current-password", 
              placeholder: "••••••••",
              class: "block w-full px-4 py-3 rounded-xl border-stone-200 text-stone-900 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all placeholder:text-stone-400" %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-stone-300 rounded cursor-pointer" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-stone-600 cursor-pointer" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Log in", 
              class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-sm text-sm font-semibold text-white bg-stone-900 hover:bg-stone-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-stone-500 transition-all cursor-pointer" %>
        </div>
      <% end %>

      <!-- Shared Links -->
      <div class="mt-8 pt-6 border-t border-stone-100">
        <div class="text-sm text-center flex flex-col gap-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>