<div class="min-h-[calc(100vh-64px)] flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md text-center">
    
    <h2 class="mt-6 text-3xl font-serif font-medium text-stone-900">
      Join the library
    </h2>
    <p class="mt-2 text-sm text-stone-500">
      Create an account to start your collection.
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 border border-stone-200 shadow-xl shadow-stone-200/50 sm:rounded-3xl sm:px-10">
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        
        <%# Basic Devise Error Messages styled for Tailwind %>
        <% if resource.errors.any? %>
          <div class="p-4 bg-red-50 border border-red-100 rounded-xl text-red-700 text-sm mb-4">
            <%= render "devise/shared/error_messages", resource: resource %>
          </div>
        <% end %>

        <!-- Email -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-stone-700 mb-1" %>
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email", 
              placeholder: "name@example.com",
              class: "block w-full px-4 py-3 rounded-xl border-stone-200 text-stone-900 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all placeholder:text-stone-400 shadow-sm" %>
        </div>

        <!-- Password -->
        <div>
          <div class="flex justify-between items-center mb-1">
            <%= f.label :password, class: "block text-sm font-medium text-stone-700" %>
            <% if @minimum_password_length %>
              <span class="text-[11px] text-stone-400 uppercase tracking-tighter">Min. <%= @minimum_password_length %> chars</span>
            <% end %>
          </div>
          <%= f.password_field :password, 
              autocomplete: "new-password", 
              placeholder: "••••••••",
              class: "block w-full px-4 py-3 rounded-xl border-stone-200 text-stone-900 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all placeholder:text-stone-400 shadow-sm" %>
        </div>

        <!-- Confirm Password -->
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-stone-700 mb-1" %>
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password", 
              placeholder: "••••••••",
              class: "block w-full px-4 py-3 rounded-xl border-stone-200 text-stone-900 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all placeholder:text-stone-400 shadow-sm" %>
        </div>

        <!-- Submit -->
        <div class="pt-2">
          <%= f.submit "Create Account", 
              class: "w-full flex justify-center py-3.5 px-4 border border-transparent rounded-xl shadow-sm text-sm font-semibold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all cursor-pointer" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-8 pt-6 border-t border-stone-100 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>