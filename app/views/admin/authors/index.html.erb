<div class="max-w-6xl mx-auto px-4 py-12">
  <div class="flex flex-col md:flex-row md:items-end justify-between mb-10 gap-6">
    <div>
      <h1 class="text-4xl font-serif font-medium text-stone-900">Authors</h1>
      <p class="text-stone-500 mt-2">Manage creator profiles and biographies.</p>
    </div>
    
    <%= link_to new_admin_author_path, class: "inline-flex items-center gap-2 bg-indigo-600 text-white px-6 py-3 rounded-2xl font-bold hover:bg-indigo-700 transition-all shadow-lg active:scale-95" do %>
      Add New Author
    <% end %>
  </div>

  <div class="bg-white border border-stone-200 rounded-[2.5rem] shadow-sm overflow-hidden">
    <table class="w-full text-left">
      <thead>
        <tr class="bg-stone-50/50 border-b border-stone-100">
          <th class="px-8 py-5 text-[11px] font-bold text-stone-400 uppercase tracking-widest">Author Details</th>
          <th class="px-8 py-5 text-[11px] font-bold text-stone-400 uppercase tracking-widest">Books</th>
          <th class="px-8 py-5 text-[11px] font-bold text-stone-400 uppercase tracking-widest text-right">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-stone-100">
        <% @authors.each do |author| %>
          <tr class="group hover:bg-stone-50/30 transition-colors">
            <td class="px-8 py-6">
              <div class="flex items-center gap-4">
                <div class="h-12 w-12 rounded-full bg-stone-100 border border-stone-200 overflow-hidden">
                  <% if author.images.attached? %>
                    <%= image_tag author.images.first.variant(resize_to_limit: [100, 100]), class: "object-cover h-full w-full" %>
                  <% end %>
                </div>
                <div>
                  <p class="font-bold text-stone-900"><%= author.name %></p>
                </div>
              </div>
            </td>
            <td class="px-8 py-6">
              <span class="text-sm font-medium text-stone-600"><%= author.books.count %> Titles</span>
            </td>
            <td class="px-8 py-6 text-right">
              <div class="flex justify-end gap-4">
                <%= link_to "Edit", edit_admin_author_path(author), class: "text-indigo-600 hover:text-indigo-900 text-sm font-bold transition" %>
                <%= button_to "Delete", admin_author_path(author), method: :delete, data: { turbo_confirm: "Delete this author profile?" }, class: "text-red-400 hover:text-red-600 text-sm font-bold transition cursor-pointer" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>