<div class="min-h-[calc(100vh-64px)] flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <!-- Breadcrumb -->
    <div class="mb-6">
      <%= link_to user_path(@user), class: "text-stone-400 hover:text-stone-600 text-sm font-medium inline-flex items-center gap-2 transition" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Profile
      <% end %>
    </div>

    <h2 class="text-3xl font-serif font-medium text-stone-900">
      Account Settings
    </h2>
    <p class="mt-2 text-sm text-stone-500">
      Update your personal information and library credentials.
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 border border-stone-200 shadow-xl shadow-stone-200/50 sm:rounded-3xl sm:px-10">
      
      <%= form_with(model: @user, local: true, class: "space-y-6") do |f| %>
        
        <% if @user.errors.any? %>
          <div class="p-4 bg-red-50 border border-red-100 rounded-xl text-red-700 text-sm">
            <h3 class="font-bold mb-1"><%= pluralize(@user.errors.count, "error") %> prevented saving:</h3>
            <ul class="list-disc list-inside">
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "Display Name", class: "block text-sm font-medium text-stone-700 mb-1" %>
          <%= f.text_field :name, 
              placeholder: "Your full name",
              class: "block w-full px-4 py-3 rounded-xl border-stone-200 text-stone-900 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all placeholder:text-stone-400 shadow-sm" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-stone-700 mb-1" %>
          <%= f.email_field :email, 
              autocomplete: "email", 
              class: "block w-full px-4 py-3 rounded-xl border-stone-200 text-stone-900 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all placeholder:text-stone-400 shadow-sm" %>
          <p class="mt-2 text-[11px] text-stone-400 uppercase tracking-tight italic">Changing your email will affect your login credentials.</p>
        </div>

        <div class="pt-4 border-t border-stone-100 flex flex-col gap-3">
          <%= f.submit "Update Profile", 
              class: "w-full flex justify-center py-3.5 px-4 border border-transparent rounded-xl shadow-sm text-sm font-semibold text-white bg-stone-900 hover:bg-stone-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-stone-500 transition-all cursor-pointer" %>
          
          <%= link_to "Change Password", edit_user_registration_path, 
              class: "w-full text-center py-3 px-4 border border-stone-200 rounded-xl text-sm font-medium text-stone-600 hover:bg-stone-50 transition-all" %>
        </div>

      <% end %>

      <div class="mt-10 pt-6 border-t border-stone-100">
        <div class="flex items-center justify-between">
          <p class="text-xs text-stone-500">Deactivating your account is permanent.</p>
          <%= button_to "Delete Account", registration_path(@user), 
              method: :delete, 
              data: { confirm: "Are you certain? All your library history will be lost." },
              class: "text-red-500 text-xs font-bold hover:underline" %>
        </div>
      </div>

    </div>
  </div>
</div>