<%= form_with(model: [:admin, book], class: "space-y-6") do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :title, class: "block text-sm font-bold text-stone-700 mb-1" %>
        <%= f.text_field :title, class: "w-full rounded-xl border-stone-200 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>
      <div>
        <%= f.label :author, class: "block text-sm font-bold text-stone-700 mb-1" %>
        <%= f.text_field :author, class: "w-full rounded-xl border-stone-200 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>
    </div>
  
    <div>
      <%= f.label :description, class: "block text-sm font-bold text-stone-700 mb-1" %>
      <%= f.text_area :description, rows: 4, class: "w-full rounded-xl border-stone-200 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div>
        <%= f.label :price, class: "block text-sm font-bold text-stone-700 mb-1" %>
        <%= f.number_field :price, step: 0.01, class: "w-full rounded-xl border-stone-200 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>
      <div>
        <%= f.label :isbn, class: "block text-sm font-bold text-stone-700 mb-1" %>
        <%= f.text_field :isbn, class: "w-full rounded-xl border-stone-200 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>
      <div>
        <%= f.label :published_year, class: "block text-sm font-bold text-stone-700 mb-1" %>
        <%= f.number_field :published_year, class: "w-full rounded-xl border-stone-200 focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>
    </div>
  
    <!-- Multi-Image Upload Field -->
    <div class="p-6 bg-stone-50 border-2 border-dashed border-stone-200 rounded-2xl">
      <%= f.label :images, "Upload Book Covers (Multiple)", class: "block text-sm font-bold text-stone-700 mb-2" %>
      <%= f.file_field :images, multiple: true, class: "block w-full text-sm text-stone-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
      
      <% if book.images.attached? %>
        <div class="mt-4 flex gap-2">
          <% book.images.each do |image| %>
            <%= image_tag image.variant(resize_to_limit: [100, 100]), class: "rounded border border-stone-200" %>
          <% end %>
        </div>
      <% end %>
    </div>
  
    <div class="pt-4">
      <%= f.submit class: "w-full bg-stone-900 text-white py-4 rounded-xl font-bold hover:bg-stone-800 transition cursor-pointer" %>
    </div>
  <% end %>