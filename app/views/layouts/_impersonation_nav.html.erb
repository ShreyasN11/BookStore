<% if impersonating? %>
  <div class="bg-amber-500 text-white py-2 px-4 sticky top-0 z-[60] flex justify-between items-center shadow-md">
    <div class="flex items-center gap-3 text-sm font-bold">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <span>IMPERSONATION MODE: You are logged in as <span class="underline"><%= current_user.email %></span></span>
    </div>
    
    <%= button_to stop_admin_impersonations_path, method: :delete, data: { turbo_method: :delete, turbo: false }, class: "bg-white text-amber-600 px-4 py-1 rounded-lg text-xs font-black uppercase tracking-widest hover:bg-stone-100 transition shadow-sm" do %>
      Exit & Return to Admin
    <% end %>
  </div>
<% end %>